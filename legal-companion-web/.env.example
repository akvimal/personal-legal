# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/personal_legal?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"

# Environment
NODE_ENV="development"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3002"

# File Upload
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_DIR="./uploads"

# AWS S3 (Future)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="your-bucket-name"

# Email Service (Future)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

# AI/LLM Configuration
# Choose ONE provider - the system will automatically detect and use the configured provider
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY="your-openai-api-key"

# OR Anthropic (Claude)
# ANTHROPIC_API_KEY="your-anthropic-api-key"

# AI Provider Selection (optional - auto-detected based on available API keys)
# AI_PROVIDER="openai"  # Options: "openai" | "anthropic"
# AI_MODEL="gpt-4-turbo-preview"  # OpenAI: "gpt-4-turbo-preview", "gpt-3.5-turbo" | Anthropic: "claude-3-sonnet-20240229"

# Google Drive Integration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3002/api/integrations/google/callback"

# Google Drive Sync Settings
GOOGLE_DRIVE_SYNC_ENABLED=true
GOOGLE_DRIVE_WEBHOOK_URL="http://localhost:3002/api/integrations/google/webhook"

# Gmail API for Email Monitoring
# Uses same OAuth credentials as Google Drive, but with Gmail API scope
GMAIL_MONITORING_ENABLED=true
GMAIL_WEBHOOK_URL="http://localhost:3002/api/integrations/email/webhook"

# Monitoring & Analytics (Future)
# SENTRY_DSN="your-sentry-dsn"
# ANALYTICS_ID="your-analytics-id"
